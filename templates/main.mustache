{{!
    @template block_tasklist/main

    This template renders the main content area for the task list block.

    Example context (json):
    {
        "instanceid": 1
    }
}}

<div id="block-tasklist-{{instanceid}}" class="block-tasklist block-cards" data-instanceid="{{instanceid}}">
    <div class="block-tasklist-additem form-group">
        <div class="block-tasklist-additem-input-container">
            <label for="block-tasklist-input-{{instanceid}}" class="sr-only">{{#str}}additem, block_tasklist{{/str}}</label>
            <input id="block-tasklist-input-{{instanceid}}" type="text" class="block-tasklist-input form-control" autocomplete="off" placeholder="{{#str}}additem, block_tasklist{{/str}}"/>
        </div>
        <button class="block-tasklist-input-button btn btn-secondary">{{#pix}}e/insert, core, {{#str}}additem, block_tasklist{{/str}}{{/pix}}</button>
    </div>
    <div class="container-fluid p-0">
        <ul class="block-tasklist-list">
        </ul>
    </div>
</div>
{{#js}}
    require(['block_tasklist/main'], function(Main) {
    Main.init('#block-tasklist-{{instanceid}}');
    });
{{/js}}
