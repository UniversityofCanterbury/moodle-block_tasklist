{{!
    @template block_tasklist/task_item

    This template renders the individual task item.

    Example context (json):
    {
        "id": 1,
        "position": 0,
        "instanceid": 27,
        "complete": true,
        "name": "Item 1"
    }
}}

<li class="block-tasklist-item {{#complete}}block-tasklist-item-complete{{/complete}}" data-itemid="{{id}}" data-position="{{position}}"
    data-instanceid="{{instanceid}}"
    draggable="true">
    <label class="block-tasklist-itemname">{{name}}</label>
    <input class="block-tasklist-item-edit-input form-control" style="display: none" value="{{name}}">
    <div class="block-tasklist-item-icons">
        <button class="block-tasklist-item-edit">
            {{#pix}}i/edit, core, {{#str}}edit{{/str}}{{/pix}}
        </button>
        <button class="block-tasklist-item-complete">
            {{#pix}}i/checked, core, {{#str}}completeitem, block_tasklist{{/str}}{{/pix}}
        </button>
        <button class="block-tasklist-item-delete">
            {{#pix}}t/delete, core, {{#str}}delete{{/str}}{{/pix}}
        </button>
    </div>
    <hr>
</li>
